<?xml version="1.0" encoding="utf-8"?><!--生词本卡片背词功能所用的ListView--><!--android:descendantFocusability="blocksDescendants"是防止点击item失效 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@drawable/card_view"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:id="@+id/tv_book_card_word_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="good"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_book_card_ph_en"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableLeft="@drawable/radiobutton_word_play"
            android:textColor="#706f6f" />

        <RadioButton
            android:id="@+id/rb_book_card_ph_am"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableLeft="@drawable/radiobutton_word_play"
            android:textColor="#706f6f" />




            <TextView
                android:id="@+id/tv_book_card_means"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:lineSpacingExtra="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_book_card_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="点击查看释义"
        android:textColor="#706f6f"
        android:textSize="20sp" />
</LinearLayout>
</ScrollView>

</LinearLayout>